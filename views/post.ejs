<% extend('./layouts/layout') %>

<div class="hex-blog">
  <nav class="breadcrumb pl-0">
    <a class="breadcrumb-item text-primary" href="/">Home</a>
    <a class="breadcrumb-item text-primary" href="/?category=<%- article.category%>">
    <% if(categories.hasOwnProperty(article.category)) { %>
      <%- categories[article.category].name %>
    <% } else { %>
      沒有分類
    <% } %></a>
    <span class="breadcrumb-item active"><%- article.title %></span>
  </nav>
  <div class="row justify-content-center">
    <div class="col-md-9">
      <!-- artical header -->
      <h1 class="text-primary"><%- article.title  || '' %></h1>
      <div class="d-flex flex-row text-secondary small">
        <div class="p-2"><i class="fa fa-user-o" aria-hidden="true"></i> <%- article.user  || '無使用者' %></div>
        <div class="p-2"><i class="fa fa-clock-o"></i> <%- momont(article.update_time * 1000).format('YYYY/MM/DD') %></div>
        <div class="p-2"><i class="fa fa-tag" aria-hidden="true"></i>
          <a href="/?category=<%- article.category%>" class="text-info">
            <% if(categories.hasOwnProperty(article.category)) { %>
              <%- categories[article.category].name %>
            <% } else { %>
              沒有分類
            <% } %>
          </a>
        </div>
      </div>
      <article class="text-dark post mb-4">
        <%- article.content || '' %>
      </article>
      <!-- 留言 -->
      <div class="card mb-3">
        <div class="card-body">
          <div id="disqus_thread"></div>
            <script>

            /**
            *  RECOMMENDED CONFIGURATION VARIABLES: EDIT AND UNCOMMENT THE SECTION BELOW TO INSERT DYNAMIC VALUES FROM YOUR PLATFORM OR CMS.
            *  LEARN WHY DEFINING THESE VARIABLES IS IMPORTANT: https://disqus.com/admin/universalcode/#configuration-variables*/
