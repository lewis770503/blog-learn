<% extend('../layouts/dashboard-layout') %>
<%
  if(article === undefined){
    var article = {};
  }
%>

<form 
<% if (article.id) { %>
  action="/dashboard/article/update/<%- article.id %>"
<% } else { %>
  action="/dashboard/article/create"
<% } %>
 method="POST" class="row justify-content-center">
  <div class="col-md-6">
    <label for="title">請輸入標題</label>
    <input type="text" id="title" class="form-control" name="title" placeholder="標題" value="<%- article.title || '' %>" required>
    <hr>
    <textarea name="content" id="editor" class="form-control">
      <%- article.content || '' %>
    </textarea>
    <script>
      CKEDITOR.replace('content');
    </script>
  </div>
  <div class="col-md-3">
    <div class="card mb-3">
      <h6 class="card-header">分類</h6>
      <div class="card-body">
        <% for (var item in categories) { %>
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="radio" name="category" required value="<%- item %>" <% if (item === article.category){ %> checked <% } %>>
            <%- categories[item].name %>
          </label>
        </div>
        <% } %>

      </div>
    </div>
    <div class="card mb-3">
      <h6 class="card-header">是否公開</h6>
      <div class="card-body">
        <div class="btn-group btn-group-toggle w-100" data-toggle="buttons">
          <label class="btn btn-outline-primary w-100 <% if (article.status === 'draft'){ %> active <% } %>">
            <input type="radio" name="status" autocomplete="off" value="draft" <% if (article.status === 'draft'){ %> checked <% } %> > 草稿
          </label>
          <label class="btn btn-outline-primary w-100 <% if (article.status === 'public'){ %> active <% } %>">
            <input type="radio" name="status" autocomplete="off" value="public" <% if (article.status === 'public'){ %> checked <% } %> > 公開
          </label>
        </div>
      </div>
    </div>

    <div class="btn-group w-100 mb-3">
      <button type="submit" class="btn btn-outline-primary w-100">儲存</button>
    </div>
    <div class="btn-group w-100">
       <a href="/dashboard/archives" class="btn btn-outline-primary w-100" title="回列表">回列表</a>
    </div>
  </div>
</form>